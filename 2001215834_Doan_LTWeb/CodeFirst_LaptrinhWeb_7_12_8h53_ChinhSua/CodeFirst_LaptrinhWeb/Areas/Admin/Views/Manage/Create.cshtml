
@{
    ViewBag.Title = "Create";

}

<div class="container" style="min-height:500px">
    <h2>Thêm Sản Phẩm Mới</h2>
    <form style="font-size:24px" method="post" action="/admin/Manage/Create" class="needs-validation" enctype = "multipart/form-data" area="Admin">

        <div class="row">
            <div class="col-md-6">
                <label for="TenSanPham">Tên Sản Phẩm</label>
                <input type="text"
                       class="form-control"
                       id="TenSanPham"
                       name="TenSanPham"
                       placeholder=" Tên Sản Phẩm" required />

            </div>
            <div class="col-md-6">
                <label for="Gia">Giá</label>
                <input type="text"
                       class="form-control"
                       id="Gia"
                       name="Gia"
                       placeholder="Giá Tiền" required />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="LoaiCaID">Loại</label>
                <select class="form-control"
                        id="LoaiCaID"
                        name="LoaiCaID" required>
                    <option value="">Chọn Loại</option>
                    @foreach (var item in @ViewBag.LoaiCa)
                    {
                        <option value="@item.LoaiCaID">@item.TenLoaiCa</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label for="HinhAnh">Hình Ảnh</label>
                <input type="file" name="imageFile" 
                       id="imageFile" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="MoTa1">Tổng Quát</label>
                <input type="text"
                       class="form-control"
                       id="MoTa1"
                       name="MoTa1"
                       placeholder="Tổng Quát" required />
            </div>
            <div class="col-md-6">
                <label for="MoTa2">Nhận Dạng</label>
                <input type="text"
                       class="form-control"
                       id="MoTa2"
                       name="MoTa2"
                       placeholder="Nhận Dạng" required />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="MoTa3">Môi Trường Sống</label>
                <input type="text"
                       class="form-control"
                       id="MoTa3"
                       name="MoTa3"
                       placeholder="Môi Trường Sống" required />
            </div>
            <div class="col-md-6">
                <label for="MoTa">Thức Ăn</label>
                <input type="text"
                       class="form-control"
                       id="MoTa"
                       name="MoTa"
                       placeholder="Thức Ăn" required />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>



